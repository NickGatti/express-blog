extends partial/html.pug

block content
  .row.mt-3.justify-content-center
    .col-md-8
      each post in posts
        .card.mt-3
          if post.imgUrl
            img(src=post.imgUrl, alt=post.imgAlt)
          .card-body
            h4.card-title
              a(href='/post/' + post.id)= post.title
            p.card-text= post.post
